<?xml version="1.0"?>
<sdf version="1.9">
    <world name="pendulum_world">

        <!-- Double pendulum model -->
        <model name="pendulum">
            <pose>0 0 2 -1.4 0 0</pose>

            <link name="upper_link">
                <pose>0 0 0 0 0 0</pose>
                <inertial>
                    <pose>0 0 -0.5 0 0 0</pose>
                    <mass>1.0</mass>
                    <inertia>
                        <ixx>.5025</ixx> <!-- .25 * m * R**2 + .5 * m * L**2 -->
                        <ixy>0.0</ixy>
                        <ixz>0.0</ixz>
                        <iyy>.5025</iyy>
                        <iyz>0.0</iyz>
                        <izz>.005</izz> <!-- .5 * m * R**2 -->
                    </inertia>
                </inertial>
                <!-- this describes what is displayed on screen -->
                <visual name="visual_cylinder">
                    <pose>0 0 -0.5 0 0 0</pose>
                    <geometry>
                        <cylinder>
                            <radius>0.1</radius>
                            <length>1.0</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>0.8 0.8 0.8 1</ambient>
                        <diffuse>0.8 0.8 0.8 1</diffuse>
                        <specular>0.8 0.8 0.8 1</specular>
                    </material>
                </visual>
            </link>
            <!-- now define the lower link of length 1 meter attached to the end of the upper_link -->
            <joint name="pendulum_joint" type="revolute">
                <parent>world</parent>
                <child>upper_link</child>
                <pose>0 0 0 0 0 0</pose>
                <axis>
                    <!-- spins about x axis -->
                    <xyz>1 0 0</xyz>
                </axis>
                <physics>
                    <provide_feedback>true</provide_feedback>
                </physics>
            </joint>

            <!-- Custom torque publishing plugin -->
            <plugin
                filename="libJointPositionControllerTorquePublisher.so"
                name="quadruped_gazbeo::JointPositionControllerTorquePublisher">
                <joint_name>pendulum_joint</joint_name>
                <topic>cmd_pendulum_joint</topic>
                <p_gain>10</p_gain>
                <i_gain>0</i_gain>
                <d_gain>2</d_gain>
                <torque_topic>joint_torque</torque_topic>
            </plugin>
        </model>
    </world>
</sdf>